@foreach (var color in codeValues)
{
    <div class="keypeg @color.ToLower()"></div>
}

@code {
    private string codes = string.Empty;

    [Parameter]
    public string Codes 
    { 
        get => codes; 
        set
        {
            codes = value;
            codeValues = codes.Split(".").Where(s => !string.IsNullOrEmpty(s)).ToArray();
        } 
    }
    string[] codeValues = new string[] { };
}
