@inherits CodeBreaker.UI.Shared.Components.Card.CodeBreakerCardBase
@namespace CodeBreaker.UI

<FluentCard class="card" style="@Style">
    <div class="card-container">
        <div>
            @HeaderContent
        </div>
        <div>
            @HeaderActions
        </div>
        <div class="card-content">
            @CardContent
        </div>
        <div class="card-actions">
            @CardActions
        </div>
    </div>
</FluentCard>



