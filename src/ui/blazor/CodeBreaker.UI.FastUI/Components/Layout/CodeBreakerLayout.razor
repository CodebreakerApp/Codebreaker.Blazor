@inherits CodeBreaker.UI.Shared.Components.Layout.CodeBreakerLayoutBase<float>
@namespace CodeBreaker.UI

<CodeBreakerDialog></CodeBreakerDialog>
<FluentDesignSystemProvider AccentBaseColor="#464EB8" BaseLayerLuminance="CurrentTheme">
    <div id="container" @ref="_container">
        <header class="@(IsDark ? "dark" : "light")">
            <input type="checkbox" id="menu-toggle" checked=@DrawerOpen @onclick=DrawerToggle />
            <label for="menu-toggle" class="menu-icon">
                <FluentIcon Name="@FluentIcons.Navigation" Size="IconSize.Size24" Filled=true></FluentIcon>
            </label>
            <h2>@Label</h2>

            @ToolbarContent
        </header>

        <main>

            <nav class="@(DrawerOpen ? "active" : "")">
                @DrawerContent
            </nav>

            <article class="@(DrawerOpen ? "" : "active")">
                <ErrorBoundary>
                    <ChildContent>
                        @ChildContent
                    </ChildContent>
                    <ErrorContent Context="ex">
                        <div class="blazor-error-boundary">@ex.Message</div>
                    </ErrorContent>
                </ErrorBoundary>
            </article>
        </main>
    </div>
</FluentDesignSystemProvider>
