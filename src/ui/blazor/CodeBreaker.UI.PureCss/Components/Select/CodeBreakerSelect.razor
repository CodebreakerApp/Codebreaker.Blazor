@inherits CodeBreaker.UI.Shared.Components.Select.CodeBreakerSelectBase<T>
@namespace CodeBreaker.UI
@typeparam T

<nav>
    <label class="@(_isOpen ? "is-checked" : "")" for="touch" @onclick=@(() => _isOpen = !_isOpen)>
        <span>@(String.IsNullOrWhiteSpace(_selectedKey) ? "Select..." : _selectedKey)</span>
        <i class='bx bx-chevron-down'></i>
    </label>
    <input type="checkbox" id="touch" class="@(_isOpen ? "is-checked" : "")">

    <ul class="slide">
        @foreach (var item in Items)
        {
            <li @onclick="@(() => OnSelectionChanged(item.Key, item.Value))"><span class="select-item">@item.Key</span></li>
        }
    </ul>
</nav>
