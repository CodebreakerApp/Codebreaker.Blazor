@inherits CodeBreaker.UI.Shared.Components.Layout.CodeBreakerLayoutBase<string>
@namespace CodeBreaker.UI

<header class="@(DrawerOpen ? "open" : "")">
    <a href="/" class="logo">@Label</a>
    <div class="group">
        <ul class="navigation">
            <li><a href="/" @onclick="DrawerToggle">Home</a></li>
            <li><a href="/game" @onclick="DrawerToggle">Game</a></li>
            <li><a href="/reports" @onclick="DrawerToggle">Reports</a></li>
            <li><a href="/about" @onclick="DrawerToggle">About</a></li>
        </ul>
        <div class="@(DrawerOpen ? "menu change" : "menu")" @onclick="DrawerToggle">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
        </div>
    </div>
</header>

<div class="content-container">
    @ChildContent
</div>
