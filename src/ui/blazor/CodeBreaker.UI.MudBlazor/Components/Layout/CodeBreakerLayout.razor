@inherits CodeBreaker.UI.Shared.Components.Layout.CodeBreakerLayoutBase
@namespace CodeBreaker.UI

<MudThemeProvider Theme="@_defaultTheme" @bind-IsDarkMode="IsDark" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="DrawerToggle" />
        <MudText Typo="Typo.h5" Class="ml-3">Codebreaker</MudText>
        <MudSpacer />
        <MudToggleIconButton @bind-Toggled="@IsDark"
                             Icon="@Icons.Filled.DarkMode" 
                             ToggledIcon="@Icons.Filled.LightMode" />
    </MudAppBar>
    <MudDrawer @bind-Open="DrawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        @DrawerContent
    </MudDrawer>
    <MudMainContent>
        <MudContainer>
            @ChildContent
        </MudContainer>
    </MudMainContent>
</MudLayout>
