@namespace CodeBreaker.UI

<MudDialog>
    <TitleContent>
        <MudBreakpointProvider>
            <MudHidden Breakpoint="Breakpoint.MdAndDown">
                <MudText Typo="Typo.h3">@Context.DialogTitle</MudText>
            </MudHidden>
            <MudHidden Breakpoint="Breakpoint.MdAndDown" Invert="true">
                <MudText Typo="Typo.h6">@Context.DialogTitle</MudText>
            </MudHidden>
        </MudBreakpointProvider>
    </TitleContent>
    <DialogContent>
        @_dialogContent
    </DialogContent>
    <DialogActions>
        @foreach (var context in Context.Actions)
        {
            <MudButton OnClick="() => CallAction(context.Action)">
                @context.Label
            </MudButton>
        }
    </DialogActions>
</MudDialog>


