@inherits LayoutComponentBase
@inject IStringLocalizer<Resource> Loc

<CodeBreakerLayout Label="@Loc["AppDisplayName"]">
    <ToolbarContent>
        <div class="flex toolbar-content">
            <h2>@Loc["AppDisplayName"]</h2>
            <LoginDisplay></LoginDisplay>
        </div>
    </ToolbarContent>
    <ChildContent>
        <div class="content-container">@Body</div>
    </ChildContent>
    <DrawerContent>
        <CodeBreakerNavMenu MenuItems="_menuItems"></CodeBreakerNavMenu>
    </DrawerContent>
</CodeBreakerLayout>
