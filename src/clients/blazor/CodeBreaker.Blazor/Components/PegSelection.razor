@using CodeBreaker.ViewModels

<MudGrid>
    <MudItem xs="12" sm="6" md="3" lg="2">
        @foreach (var field in ViewModel.Fields)
        {
            <MudSelect @bind-Value="field.Value">
            @foreach (string colorField in ViewModel.Game?.Type.Fields ?? Array.Empty<string>())
            {
                <MudSelectItem Value="@colorField">@colorField</MudSelectItem>
            }
            </MudSelect>
        }
    </MudItem>
</MudGrid>

@code {
    [Parameter][EditorRequired]
    public GamePageViewModel ViewModel { get; init; }
}
